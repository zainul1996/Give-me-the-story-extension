{
  "name": "Highlight context menu",
  "description": "Show context menu after highlighting text",
  "homepage_url": "https://google.com",
  "version": "2.0.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Highlighted Context Menu"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "js": ["before.js"],
      "matches": ["https://*/*", "http://*/*"]
    },
    {
      "run_at": "document_idle",
      "js": ["after.js"],
      "css": ["bulma.min.css", "main.css"],
      "html": ["main.html"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "scripting", "contextMenus"],
  "host_permissions": ["https://*/*", "http://*/*"]
}
